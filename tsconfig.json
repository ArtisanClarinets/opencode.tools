{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"],
      "agents/*": ["agents/*"],
      "tools/*": ["tools/*"]
    }
  },
  "include": [
    "src/**/*",
    "agents/**/*",
    "tools/**/*",
    "examples/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests"
  ]
}