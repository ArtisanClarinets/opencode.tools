{
  "compilerOptions": {
    "target": "ES2020",
    "jsx": "react",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"],
      "@/*": ["src/*", "foundry/*"],
      "@src/*": ["src/*"],
      "agents/*": ["agents/*"],
      "tools/*": ["tools/*"],
      "@foundry/core": ["src/foundry/core/index.ts", "foundry/foundry/core"],
      "@foundry/core/*": ["src/foundry/core/*", "foundry/foundry/core/*"],
      "@foundry/types": ["src/foundry/types.ts", "foundry/foundry/types/index.ts"],
      "@foundry/types/*": ["foundry/foundry/types/*"],
      "@foundry/*": ["src/foundry/*", "foundry/foundry/*"]
    }
  },
  "include": [
    "src/**/*",
    "src/types/**/*",
    "agents/**/*",
    "tools/**/*",
    "examples/**/*",
    "scripts/**/*",
    "types/**/*",
    "foundry/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "foundry/foundry/tui/**/*"
  ]
}
