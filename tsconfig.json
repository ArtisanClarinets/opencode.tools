{
  "compilerOptions": {
    "target": "ES2020",
    "jsx": "react",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"],
      "@/*": ["src/*", "foundry/*"],
      "agents/*": ["agents/*"],
      "tools/*": ["tools/*"],
      "@foundry/*": ["foundry/foundry/*"]
    }
  },
  "include": [
    "src/**/*",
    "agents/**/*",
    "tools/**/*",
    "examples/**/*",
    "scripts/**/*",
    "types/**/*",
    "foundry/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "foundry/foundry/tui/**/*"
  ]
}
