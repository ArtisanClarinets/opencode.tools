{
  "name": "opencode-tools",
  "version": "1.0.0",
  "description": "OpenCode Tools - Automated client project research, documentation, and code generation",
  "main": "dist/index.js",
  "bin": {
    "opencode-tools": "./dist/src/cli.js",
    "oct": "./dist/src/cli.js"
  },
  "preferGlobal": true,
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/tui-app.ts",
    "tui": "ts-node src/tui-app.ts",
    "start": "npm run tui",
    "test": "jest --clearCache && jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern='unit/'",
    "test:integration": "jest --testPathPattern='integration/'",
    "test:e2e": "jest --testPathPattern='e2e/' --runInBand",
    "test:security": "jest --testPathPattern='security/' --passWithNoTests",
    "test:performance": "jest --testPathPattern='performance/'",
    "test:load": "jest --testPathPattern='load/'",
    "test:mutation": "stryker run",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e && npm run test:security",
    "lint": "eslint src/**/*.ts agents/**/*.ts tests/**/*.ts",
    "lint:fix": "eslint src/**/*.ts agents/**/*.ts tests/**/*.ts --fix",
    "verify:system": "ts-node scripts/verify-full-system.ts",
    "run:delivery": "ts-node scripts/run-delivery.ts",
    "postinstall": "npm run build && node dist/scripts/post-install.js",
    "verify:mcp": "ts-node scripts/verify-mcp-tools.ts",
    "verify:global": "ts-node scripts/research-global-opencode.ts",
    "integrate": "ts-node scripts/native-integrate.ts",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "validate": "npm run lint && npm run build && npm run test:all"
  },
  "keywords": [
    "opencode",
    "automation",
    "research",
    "documentation",
    "code-generation",
    "client-projects",
    "cli",
    "mcp"
  ],
  "author": "OpenCode Tools Team",
  "license": "MIT",
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/ink-gradient": "^2.0.4",
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.19.33",
    "@types/pdfkit": "^0.17.5",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@types/archiver": "^7.0.0",
    "@types/handlebars": "^4.1.0",
    "@types/html-to-text": "^9.0.4",
    "@types/ink": "^0.5.2",
    "@types/react": "^17.0.38",
    "archiver": "^7.0.1",
    "axios": "^1.6.0",
    "cheerio": "^1.2.0",
    "commander": "^11.0.0",
    "drizzle-orm": "^0.45.1",
    "handlebars": "^4.7.8",
    "html-to-text": "^9.0.5",
    "husky": "^9.1.7",
    "ink": "^3.2.0",
    "ink-big-text": "^1.2.0",
    "ink-box": "^1.0.0",
    "ink-divider": "^2.0.0",
    "ink-gradient": "^2.0.0",
    "ink-link": "^2.0.0",
    "ink-select-input": "^4.2.1",
    "ink-spinner": "^4.0.3",
    "ink-table": "^3.0.0",
    "ink-text-input": "^4.0.3",
    "js-yaml": "^4.1.0",
    "mermaid": "^11.12.2",
    "pdf-lib": "^1.17.1",
    "pdfkit": "^0.17.2",
    "react": "^17.0.2",
    "sharp": "^0.34.5",
    "strip-ansi": "^7.1.2",
    "ulid": "^3.0.2",
    "uuid": "^13.0.0",
    "winston": "^3.19.0",
    "zod": "^4.3.6"
  },
  "files": [
    "dist/**/*",
    "templates/**/*",
    "prompts/**/*",
    "mcp/**/*",
    "docs/**/*",
    "opencode.json",
    "opencode-system-prompt.md",
    "README.md",
    "AGENTS.md",
    "INTEGRATION_GUIDE.md"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "directories": {
    "doc": "docs",
    "example": "examples",
    "test": "tests"
  },
  "type": "commonjs",
  "types": "./dist/index.d.ts"
}
